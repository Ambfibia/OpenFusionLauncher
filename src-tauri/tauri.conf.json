{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "OpenFusionLauncher",
  "version": "1.0.0",
  "identifier": "OpenFusionLauncher",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "OpenFusion Launcher",
        "width": 1280,
        "height": 720,
        "minWidth": 854,
        "minHeight": 480,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "./resources/": "./"
    },
    "copyright": "2020 - 2024 OpenFusion Contributors"
  }
}
